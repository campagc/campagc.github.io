---
// Parte in alto (frontmatter): qui scrivi TypeScript/JavaScript server-side
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="it">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio di [Tuo Nome] - Informatica" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-900 text-white font-sans">
        <!-- Qui potresti mettere una Navbar fissa -->
        <nav class="p-4 border-b border-slate-700">
            <div class="max-w-4xl mx-auto flex justify-between">
                <span class="font-bold text-xl">DevPortfolio</span>
                <ul class="flex gap-4">
                    <li><a href="#progetti" class="hover:text-blue-400">Progetti</a></li>
                    <li><a href="#chi-sono" class="hover:text-blue-400">Chi sono</a></li>
                </ul>
            </div>
        </nav>

        <!-- Slot è dove verrà iniettato il contenuto delle pagine -->
		<slot />

        <footer class="text-center p-8 text-slate-500 text-sm">
            © {new Date().getFullYear()} Costruito con Astro & Tailwind
        </footer>
	</body>
</html>